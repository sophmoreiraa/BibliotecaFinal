@model BibliotecaFinal.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar 🦋</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CategoriaLivro" class="control-label"></label>
                <input asp-for="CategoriaLivro" class="form-control" />
                <span asp-validation-for="CategoriaLivro" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista ⤶</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
