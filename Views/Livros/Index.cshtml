@model IEnumerable<BibliotecaFinal.Models.Livros>

@{
    ViewData["Title"] = "Index";
}

<h1>Mural 🍁֒</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeLivros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinopseLivros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutorLivros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeLivros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinopseLivros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutorLivros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaLivro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
